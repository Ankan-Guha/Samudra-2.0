<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/water_quality_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real-time Water Quality Data"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="5"
            android:padding="8dp"
            android:layout_gravity="center">

            <!-- Water Temperature -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_temperature" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Temp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/water_temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Salinity -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_salinity" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salinity"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/salinity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Current Speed -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_current_speed" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Speed"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/current_speed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- pH Level -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_ph_level" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pH Level"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/ph_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Dissolved Oxygen -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_dissolved_oxygen" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dissolved O2"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/dissolved_o2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Dissolved Methane -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_methane" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Methane"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/dissolved_methane_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- pCO2 Air -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_pco2_air" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pCO2 Air"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/pco2_air_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- pCO2 Water -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_pco2_water" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pCO2 Water"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/pco2_water_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Chlorophyll-a -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_chlorophyll" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chlorophyll-a"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/chlorophyll_a_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Phycocyanin -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_phycocyanin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phycocyanin"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp"/>
                <TextView
                    android:id="@+id/phycocyanin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
